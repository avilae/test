<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="connectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
		<property name="brokerURL">
			<value>tcp://devactivemq.ebackground.com:61616</value>
		</property>
	</bean>
	
	<bean id="cachedConnectionFactory" class="org.springframework.jms.connection.CachingConnectionFactory">
		<property name="targetConnectionFactory" ref="connectionFactory"/>
		<property name="sessionCacheSize" value="10"/>
	</bean>

	<bean id="recheckDrugTestingQueue" class="org.apache.activemq.command.ActiveMQQueue">
		<constructor-arg value="recheckDrugTestingQueue" />
	</bean>


	<bean id="vendorJmsService" class="org.springframework.jms.core.JmsTemplate">
		<property name="connectionFactory" ref="cachedConnectionFactory" />
		<property name="defaultDestination" ref="recheckDrugTestingQueue" />
	</bean>


</beans>
