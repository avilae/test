<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
"http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	<!--  ============================== RULES ======================================  -->
	
	<bean id="SJV_RulesContext"  class="com.abc.service.integrations.vendor.cs.rules.RulesContext">
  		<property name="contextName" value="SJV" />
  		<property name="rules">
			<set>
				<bean class="com.abc.service.integrations.vendor.cs.rules.custom.CriminalCaseIdentifiersRule">
					<property name="trustIdByName" value="true" />
				</bean>
				<bean class="com.abc.service.integrations.vendor.cs.rules.custom.SjvCriminalCaseRule" />
				<bean class="com.abc.service.integrations.vendor.cs.rules.custom.SjvCivilCaseRule" />
				<bean class="com.abc.service.integrations.vendor.cs.rules.custom.NameMatchOnlyRule" />
				<bean class="com.abc.service.integrations.vendor.cs.rules.custom.CriminalCaseDatesRule" />
			</set>
  		</property>
	</bean>
	
	<bean id="BAXTER_RulesContext"  class="com.abc.service.integrations.vendor.cs.rules.RulesContext">
  		<property name="contextName" value="BAXTER" />
  		<property name="rules">
			<set>
				<bean class="com.abc.service.integrations.vendor.cs.rules.custom.CriminalCaseIdentifiersRule">
					<property name="trustIdByName" value="true" />
				</bean>
				<bean class="com.abc.service.integrations.vendor.cs.rules.custom.BaxterCriminalCaseRule" />
				<bean class="com.abc.service.integrations.vendor.cs.rules.custom.NameMatchOnlyRule" />
				<bean class="com.abc.service.integrations.vendor.cs.rules.custom.CriminalCaseDatesRule" />
			</set>
  		</property>
	</bean>

	<bean id="vendorResultsRulesFactory"  class="com.abc.service.integrations.vendor.cs.rules.RulesContextFactory">
  		<property name="services">
  			<map>
  				<entry>
					<key><value>SJV</value></key>
					<ref bean="SJV_RulesContext" />
  				</entry>
  				<entry>
					<key><value>BAXTER</value></key>
					<ref bean="BAXTER_RulesContext" />
  				</entry>
  			</map>
  		</property>
	</bean>
	
	
	
	<!--  ============================ VALIDATION ======================================  -->
	

	<bean id="vendorResultProcessorFactory"  class="com.abc.service.integrations.vendor.cs.ResultProcessorFactory">
  		<property name="services">
  			<map>
  				<entry>
					<key><value>CLEAR</value></key>
					<ref bean="noRecordProcessor" />
  				</entry>
  				<entry>
					<key><value>STATUS</value></key>
					<ref bean="statusRecordProcessor" />
  				</entry>
  				<entry>
					<key><value>HIT_CRIMINAL</value></key>
					<ref bean="criminalRecordProcessor" />
  				</entry>
  				<entry>
					<key><value>HIT_CIVIL</value></key>
					<ref bean="civilRecordProcessor" />
  				</entry>
  				<entry>
					<key><value>OIN_STATUS</value></key>
					<ref bean="oinRecordProcessor" />
  				</entry>
  			</map>
  		</property>
	</bean>

	<bean id="noRecordProcessor"  class="com.abc.service.integrations.vendor.cs.processors.NoRecordProcessor">
	</bean>
	<bean id="statusRecordProcessor"  class="com.abc.service.integrations.vendor.cs.processors.StatusRecordProcessor">
	</bean>
	<bean id="criminalRecordProcessor"  class="com.abc.service.integrations.vendor.cs.processors.CriminalRecordProcessor">
	</bean>
	<bean id="civilRecordProcessor"  class="com.abc.service.integrations.vendor.cs.processors.CivilRecordProcessor">
	</bean>
	<bean id="oinRecordProcessor"  class="com.abc.service.integrations.vendor.cs.processors.OinRecordProcessor">
	</bean>
	
	<!--  ==========================================================================  -->
	
	
	
	<bean id="vendorResultsValidationFactory"  class="com.abc.service.integrations.vendor.cs.validators.ValidationContextFactory">
  		<property name="services">
  			<map>
  				<entry>
					<key><value>HIT_CRIMINAL</value></key>
					<ref bean="criminalValidationContext" />
  				</entry>
  			</map>
  		</property>
	</bean>
	
	<bean id="criminalValidationContext"  class="com.abc.service.integrations.vendor.cs.validators.ValidationContext">
  		<property name="validators">
			<set>
				<ref bean="criCaseValidator" />
			</set>
  		</property>
		<property name="contextName" value="HIT_CRIMINAL" />
  	</bean>
	
	
	
	<!--  Context Validators   -->
	
	<bean id="criCaseValidator"  class="com.abc.service.integrations.vendor.cs.validators.CriminalCaseValidator">
  		<property name="validationDefinitions">
			<set>
				<ref bean="criCaseNumberDef" />
				<ref bean="criCaseFilingDateDef" />
				<!-- <ref bean="criCaseDispositionDateDef" /> -->
				<ref bean="criminalIdentiferDef" />
				<ref bean="s_communityServiceDef" />
				<ref bean="s_jailDef" />
				<ref bean="s_jailCreditDef" />
				<ref bean="s_licenseSuspendedDef" />
				<ref bean="s_prisonCreditDef" />
				<ref bean="s_prisonDef" />
				<ref bean="s_probationDef" />
				<ref bean="a_communityServiceDef" />
				<ref bean="a_jailDef" />
				<ref bean="a_jailCreditDef" />
				<ref bean="a_licenseSuspendedDef" />
				<ref bean="a_prisonCreditDef" />
				<ref bean="a_prisonDef" />
				<ref bean="a_probationDef" />
				<ref bean="fieldLengthDef" />
			</set>
  		</property>
	</bean>
	
		
	<!--  Validation Definitions  -->
	
	<bean id="criCaseNumberDef"  class="com.abc.service.integrations.vendor.cs.validators.ValidationDefinition">
  		<property name="propertyName" value="criCase.criCase.id.caseNumber" />
  		<property name="validator">
  			<bean class="com.abc.service.integrations.vendor.cs.validators.RequiredFieldValidator">
