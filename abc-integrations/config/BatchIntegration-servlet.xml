	<bean id="defVelocityEngine" class="org.springframework.ui.velocity.VelocityEngineFactoryBean">
	  <property name="velocityProperties">
	  	<props>
			 <prop key="resource.loader">file</prop>
		      <prop key="file.resource.loader.class">org.apache.velocity.runtime.resource.loader.FileResourceLoader</prop>
		      <prop key="file.resource.loader.path">@VELOCITY_RESOURCE_PATH@</prop>
		      <prop key="file.resource.loader.cache">false</prop>
		      <prop key="directive.set.null.allowed">true</prop>
		</props>
	  </property>	  
	</bean>

	<bean id="ReportBuilder" class="com.abc.integration.batch.ReportBuilder">
		<property name="velocityEngine" ref="defVelocityEngine"/>
	</bean>

    <bean class="com.abc.integration.batch.BatchProcessor">
    	<property name="emailTo"  value="@EMAIL_TO@"/>
    	<property name="emailFrom" value="@EMAIL_FROM@"/>
    </bean>

